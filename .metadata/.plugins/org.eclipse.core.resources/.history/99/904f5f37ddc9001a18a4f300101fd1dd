package com.libreria.practicaClase6;

import java.util.Arrays;

public class Burbuja {

	{
	    static void bubbleSort(int arr[], int n)
	    {
	        // Base case
	        if (n == 1)
	            return;

	        for (int i=0; i<n-1; i++)
	            if (arr[i] > arr[i+1])
	            {
	                int temp = arr[i];
	                arr[i] = arr[i+1];
	                arr[i+1] = temp;
	            }

	        bubbleSort(arr, n-1);
	    }


	}

	private void bubbleSort(int[] arr, int i) {
		// TODO Auto-generated method stub
		
	}}
